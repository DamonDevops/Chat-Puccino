<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Extended.UI.Controls;assembly=SkiaSharp.Extended.UI"
             x:Class="ChatPuccino.Views.LandingPage"
             NavigationPage.HasNavigationBar="False"
             BackgroundImageSource="main_bg.jpg">
    
    <Grid RowDefinitions="auto, auto, *" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Padding="32" Margin="20,40,20,0">
        <Grid Grid.Row="0" HorizontalOptions="FillAndExpand">
            <Border Grid.Row="0" Opacity="0.5" BackgroundColor="{StaticResource LightPink}" StrokeShape="RoundRectangle 15,15,15,15" StrokeThickness="2" Stroke="{StaticResource DarkPink}"/>
            <Grid HorizontalOptions="Center">
                <VerticalStackLayout>
                    <skia:SKLottieView
                        Source="main_logo.json"
                        RepeatCount="-1"
                        RepeatMode="Reverse"
                        HeightRequest="150"
                        WidthRequest="150"
                        />
                    <Label Text="Chat Puccino" FontSize="40" FontAttributes="Bold"></Label>
                </VerticalStackLayout>
            </Grid>
        </Grid>
    </Grid>
    
</ContentPage>